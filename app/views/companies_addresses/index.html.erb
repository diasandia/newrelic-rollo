<h1>Companies Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies_addresses.each do |companies_address| %>
      <tr>
        <td><%= companies_address.company %></td>
        <td><%= companies_address.address %></td>
        <td><%= link_to 'Show', companies_address %></td>
        <td><%= link_to 'Edit', edit_companies_address_path(companies_address) %></td>
        <td><%= link_to 'Destroy', companies_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

