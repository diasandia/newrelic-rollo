<p id="notice"><%= notice %></p>

<h1>User Companies</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Company</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_companies.each do |user_company| %>
      <tr>
        <td><%= user_company.user %></td>
        <td><%= user_company.company %></td>
        <td><%= user_company.address %></td>
        <td><%= link_to 'Show', user_company %></td>
        <td><%= link_to 'Edit', edit_user_company_path(user_company) %></td>
        <td><%= link_to 'Destroy', user_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

